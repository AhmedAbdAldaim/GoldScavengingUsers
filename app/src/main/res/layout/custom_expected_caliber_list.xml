<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:id="@+id/card"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:contentPadding="@dimen/_10sdp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        >

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/name"
                                   app:fontFamily="@font/onumedium"
                                   android:drawableStart="@drawable/ic_person_grey"
                                   android:text="احمد محمد حسن علي"
                                   android:drawablePadding="@dimen/_5sdp"
                                   android:layout_gravity="center"
                                   android:textSize="@dimen/_11ssp"
                                   android:textAlignment="viewStart"
                                   android:textColor="@color/blue"
                                   />

                           </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/gold_wieght_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/gold_ingot_weigth_caliber"
                                android:drawableStart="@drawable/ic_gold_weight_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gold_wieght"
                            app:fontFamily="@font/onumedium"
                            android:text="6272"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sample_weight_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/sample_weight_caliber"
                                android:drawableStart="@drawable/ic_gold_simple_weight_gre"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sample_weight"
                            app:fontFamily="@font/onumedium"
                            android:text="2627"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/gold_karat_weight_caliber"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/caliber_caliber"
                                android:drawableStart="@drawable/ic_gold_kat_weight_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gold_karat_weight"
                            app:fontFamily="@font/onumedium"
                            android:text="271.1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/net_gold_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/net_caliber"
                                android:drawableStart="@drawable/ic_net"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/net_gold"
                                android:text="271.1"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/price_gram_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/price_gram_calibe"
                                android:drawableStart="@drawable/ic_cash_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/price_gram"
                                android:text="271"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/onumedium"
                                android:paddingStart="@dimen/_4sdp"
                                android:id="@+id/price_sud_pound1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/price_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/price_show"
                                android:drawableStart="@drawable/ic_cash_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/price"
                                android:text="271"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/onumedium"
                                android:paddingStart="@dimen/_4sdp"
                                android:id="@+id/price_sud_pound2"/>
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:id="@+id/recovey"
                    android:layout_gravity="end"
                    android:text="@string/recovery"
                    android:drawableStart="@drawable/ic_recovery"
                    android:gravity="end"
                    app:fontFamily="@font/onumedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/background_button_delete" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>