<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Ui.Activity.Aboutapp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الشركة :"
            android:gravity="right"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:fontFamily="@font/ayar_wagaung"
            android:textColor="@color/black"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:id="@+id/image_doctor"
                android:layout_gravity="center"
                android:src="@drawable/companayprofile"
                app:civ_border_color="@color/black1"
                app:civ_border_width="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شركة ديتكتور للهندسة التقنية المحدودة"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/ayar_wagaung"
                android:textColor="@color/red"
                />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:padding="@dimen/_2sdp"
                        android:autoLink="email"
                       android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="@dimen/_5sdp"
                        android:linksClickable="true"
                        android:text="Detector-Contracting@hotmail.com"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/ayar_wagaung"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:padding="@dimen/_2sdp"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="السودان - الخرطوم العربي عمارة الذهب"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/ayar_wagaung"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:padding="@dimen/_2sdp"
                        android:autoLink="phone"
                        android:linksClickable="true"
                        android:drawableStart="@drawable/ic_phone_num"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="+249910546777"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/ayar_wagaung"
                        android:textColor="@color/black"
                        />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="طور بواسطة :"
            android:gravity="right"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:fontFamily="@font/ayar_wagaung"
            android:textColor="@color/black"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7D Company"
                    android:gravity="center"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/ayar_wagaung"
                    android:textColor="@color/red"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:padding="@dimen/_2sdp"
                    android:drawableStart="@drawable/ic_phone_num"
                    android:drawablePadding="@dimen/_5sdp"
                    android:linksClickable="true"
                    android:text="http://Wa.me/249119053992"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/ayar_wagaung"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:padding="@dimen/_2sdp"
                    android:drawableStart="@drawable/ic_phone_num"
                    android:drawablePadding="@dimen/_5sdp"
                    android:linksClickable="true"
                    android:text="http://Wa.me/249992088105"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/ayar_wagaung"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>