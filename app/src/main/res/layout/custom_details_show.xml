<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_3ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:id="@+id/card"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        >


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/_3sdp"
                               android:paddingStart="@dimen/_5sdp"
                               android:paddingEnd="@dimen/_5sdp"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/name"
                                   android:layout_gravity="center"
                                   android:textSize="@dimen/_11ssp"
                                   app:fontFamily="@font/onumedium"
                                   android:drawableStart="@drawable/ic_person_grey"
                                   android:text="احمد محمد حسن علي"
                                   android:drawablePadding="@dimen/_5sdp"
                                   android:textAlignment="viewStart"
                                   android:textColor="@color/blue"
                                   />

                           </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/gold_wieght_title"
                                app:fontFamily="@font/onumedium"
                                android:layout_gravity="center"
                                android:text="@string/gold_ingot_weigth_show"
                                android:drawableStart="@drawable/ic_gold_weight_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gold_wieght"
                            app:fontFamily="@font/onumedium"
                            android:text="6272"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sample_weight_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/sample_weight_show"
                                android:layout_gravity="center"
                                android:drawableStart="@drawable/ic_gold_simple_weight_gre"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sample_weight"
                            app:fontFamily="@font/onumedium"
                            android:text="2627"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/gold_karat_weight_show"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/caliber_show"
                                android:drawableStart="@drawable/ic_gold_kat_weight_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:layout_gravity="center"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gold_karat_weight"
                            app:fontFamily="@font/onumedium"
                            android:text="271.1"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/net_gold_title"
                                app:fontFamily="@font/onumedium"
                                android:text="@string/net_gold_show"
                                android:layout_gravity="center"
                                android:drawableStart="@drawable/ic_net"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                android:layout_marginEnd="@dimen/_3sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/net_gold"
                                android:layout_gravity="center"
                                app:fontFamily="@font/onumedium"
                                android:text="272"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                     android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:gravity="end"
                    android:layout_gravity="end">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/upddtn"
                        app:fontFamily="@font/onumedium"
                        android:drawableStart="@drawable/ic_update"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/background_button_update" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/deltebtn"
                        app:fontFamily="@font/onumedium"
                        android:drawableStart="@drawable/ic_delete"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/background_button_delete" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/addbtn"
                        app:fontFamily="@font/onumedium"
                        android:drawableStart="@drawable/ic_add"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@string/added"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/background_button_added" />

                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="start"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add"
                        android:text="@string/dateadded"
                        android:drawableStart="@drawable/ic_added_date"
                        app:fontFamily="@font/onumedium"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addeddate"
                        app:fontFamily="@font/pnu_medium"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black1"
                        />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>