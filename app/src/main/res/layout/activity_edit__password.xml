<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.Edit_Password">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            tools:ignore="MissingConstraints">
            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/name"
                android:inputType="text"
                android:hint="@string/full_name"
                android:textSize="@dimen/_14ssp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/background_edittext"
                android:textAlignment="viewStart"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            tools:ignore="MissingConstraints">
            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/phone"
                android:inputType="number"
                android:hint="@string/phone_edit_profile"
                android:textSize="@dimen/_14ssp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/background_edittext"
                android:textAlignment="viewStart"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            tools:ignore="MissingConstraints">
            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/shop"
                android:inputType="text"
                android:hint="@string/shop"
                android:textSize="@dimen/_14ssp"
                android:drawableStart="@drawable/ic_shop"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/background_edittext"
                android:textAlignment="viewStart"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            tools:ignore="MissingConstraints">
            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/newpassword"
                android:inputType="text"
                android:hint="@string/newpassword"
                android:textSize="@dimen/_14ssp"
                android:drawableStart="@drawable/ic_lockon"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/background_edittext"
                android:textAlignment="viewStart"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            tools:ignore="MissingConstraints">

            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/newpasswordconfirm"
                android:inputType="textPassword"
                android:hint="@string/newpasswordconfirm"
                android:textSize="@dimen/_14ssp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/background_edittext"
                android:textAlignment="viewStart"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:paddingEnd="@dimen/_10sdp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/visibiltyoff"
                    android:visibility="visible"
                    android:src="@drawable/ic_visibiltyoff"
                    android:layout_gravity="center|end"
                    android:onClick="Visibiltyoff_Password"
                    tools:ignore="OnClick" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/visibilty"
                    android:visibility="invisible"
                    android:src="@drawable/ic_visibilty"
                    android:layout_gravity="center|end"
                    android:onClick="Visibilty_Password"
                    tools:ignore="OnClick" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/edit_profile_btn"
                android:id="@+id/btn_upd"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:background="@drawable/background_button_register"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="btn_upd"
                tools:ignore="OnClick" />
        </androidx.cardview.widget.CardView>

    </LinearLayout >
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>